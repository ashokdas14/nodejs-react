pipeline {
    agent {
            label 'worker02'
        }
    options {
        office365ConnectorWebhooks([[notifyBuildStart: true, notifyAborted: true, notifyBackToNormal: true, notifyFailure: true, notifyNotBuilt: true, notifyRepeatedFailure: true, notifySuccess: true, notifyUnstable: true, startNotification: true, url: 'https://criticalrivertechnologies.webhook.office.com/webhookb2/ad880db1-09c4-41b0-b58e-bcb66f692e6e@94525b16-dc90-4dcc-82bc-0719e14b378e/JenkinsCI/e194c95c96f34844b3f36bc87c86819e/c4ffb209-fa7f-4fb0-b560-207406a421f6']])
    }
	stages {
	stage('Git Checkout'){
            steps{
            git branch: 'main', url: 'https://github.com/ashokdas14/nodejs-react.git'
            }
        }
    stage('SAST') {
        steps {
            
            withSonarQubeEnv('sonar') {
            sh 'npm install sonarqube-scanner --save-dev'
            sh 'npm run sonar'
            }
        }
    }
	stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: false, credentialsId: 'sonar'
                }
        }
    }
    post {
         success {
            echo 'Run sbx_nodejs_build'
            build wait: false, job: 'sbx_nodejs_build'   // One or more steps need to be included within each condition's block.
            }
        }
}